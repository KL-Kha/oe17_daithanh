<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ====== Specific Subscription Page ====== -->
    <template id="subscription" name="Subscription">
        <t t-set="o_portal_fullwidth_alert" groups="sales_team.group_sale_salesman">
            <t t-call="portal.portal_back_in_edit_mode">
                <t t-set="backend_url" t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (subscription._name, subscription.id, action.id)" t-ignore="true"/>
            </t>
        </t>

        <t t-call="portal.portal_layout">
            <t t-set="wrapwrap_classes" t-value="'o_portal_bg_dark'"/>

            <div class="row mt16 oe_website_contract o_portal_sidebar">

                <!-- ====== Sidebar  ====== -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div><strong>Next Invoice: <span t-field="subscription.next_invoice_date"/></strong></div>
                                <div><strong>Amount: <span t-field="subscription.amount_untaxed" t-options='{"widget": "monetary","display_currency": subscription.currency_id}'/></strong></div>
                                <a t-if="subscription.subscription_state == '3_progress' and subscription.sale_order_template_id and display_change_plan"
                                    role="button" class="mt8 btn btn-primary" t-att-href="subscription.get_portal_url()">
                                        Change plan
                                </a>
                                <div t-if="subscription.payment_token_id">
                                    <strong>Payment method: <t t-esc="subscription.payment_token_id._build_display_name(max_length=14)"/></strong>
                                </div>
                                <t t-if="subscription.subscription_state in ['3_progress', '4_paused']">
                                    <!-- User is logged in under the partner set on the subscription -->
                                    <t t-if="enable_token_management">
                                        <a role="button" class="btn btn-secondary btn-block mt-2 w-100" t-att-href="token_management_url">
                                            <t t-if="subscription.payment_token_id">Change Payment Method</t>
                                            <t t-else="">Set Payment Method</t>
                                        </a>
                                    </t>
                                    <!-- User is logged in under a partner different than that set on the subscription -->
                                    <div t-elif="not user._is_public()"
                                         title="Managing payment methods requires to be logged in under the customer account."
                                    > <!-- Wrap the disabled button with a div to show the title on hover. -->
                                         <button href="#"
                                                 disabled="true"
                                                 class="mt-2 btn btn-secondary w-100">
                                             Manage Payment Methods
                                         </button>
                                    </div>
                                    <!-- User is logged out -->
                                    <a t-elif="payment_methods_sudo or tokens_sudo"
                                       title="You must be logged in to manage your payment methods."
                                       t-attf-href="/web/login?redirect={{subscription.get_portal_url()}}"
                                       role="button"
                                       class="mt-2 btn btn-secondary w-100">
                                        Manage Payment Methods
                                    </a>
                                </t>
                                <!-- Download -->
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap mt-2">
                                    <div class="btn-group flex-grow-1 me-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="subscription.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download"/> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print" t-att-href="subscription.get_portal_url(report_type='pdf')" id="print_invoice_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                    </div>
                                </div>
                            </li>
                            <li t-if="display_close" class="list-group-item flex-grow-1">
                                <a role="button" data-bs-toggle="modal" data-bs-target="#wc-modal-close-init" href="#">Close Subscription</a>
                            </li>
                            <li t-if="subscription.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Subscription Manager:</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pe-2">
                                        <img class="rounded-circle mr4 float-start o_portal_contact_img" t-attf-src="#{image_data_uri(subscription.user_id.avatar_1024)}" alt="Contact"/>
                                    </div>
                                    <div class="col ps-0" style="min-width: 150px">
                                        <span t-field="subscription.user_id" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <div><a t-if="is_follower" href="#discussion" class="small"><i class="fa fa-comment"></i> Send message</a></div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- ====== Page Content  ====== -->
                <div class="col-12 col-lg">
                    <div class="card oe_website_contract">
                        <div class="card-header bg-white pb-2 pt-3">
                            <div class="row">
                                <div class="alert alert-danger text-center" role="alert" t-if="subscription.subscription_state in ['3_progress', '4_paused'] and subscription.next_invoice_date &lt; datetime.date.today()">
                                    Your subscription is expired, will be closed soon. <a t-if="(payment_methods_sudo or tokens_sudo) and subscription.amount_total> 0" href="#payment_message">Pay now to renew</a> <t t-else="">Pay now to renew</t>
                                </div>
                                <div class="col-12 col-lg flex-grow-1 mb-1 mb-lg-0">
                                    <h4 class="mb-0"><small class="text-muted">Subscription -</small> <span t-field="subscription.display_name"/></h4>
                                </div>
                                <div class="col-12 col-lg flex-grow-0 text-lg-end mb-1 mb-lg-0">
                                    <span t-if="subscription.subscription_state in ['3_progress', '4_paused'] and subscription.next_invoice_date &lt; datetime.date.today()" class="badge rounded-pill text-bg-danger"><i class="fa fa-fw fa-repeat"/> To Renew</span>
                                    <span t-elif="subscription.subscription_state == '3_progress'" class="badge rounded-pill text-bg-success"><i class="fa fa-fw fa-check"/> In Progress</span>
                                    <span t-if="subscription.subscription_state in ['6_churn', '5_renewed']" class="badge rounded-pill text-bg-dark"><i class="fa fa-fw fa-remove"/> Closed</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div t-if="message and message_class" t-att-class="'alert ' + message_class" role="alert">
                                <p t-esc="message"/>
                            </div>

                            <div t-if="subscription.get_portal_last_transaction().state == 'pending'">
                                <div class="alert alert-primary m-1">
                                    <span>
                                        Your payment made on the <span t-field="subscription.get_portal_last_transaction().last_state_change"/> is pending.
                                        Your subscription will be renewed as soon as it is confirmed.<br/>
                                        Don't hesitate to <a href="#discussion">contact us</a> if there is a problem or an emergency.
                                    </span>
                                </div>
                            </div>

                            <div id="information" class="row mt-4">
                                <!-- ======  Plan Overview ====== -->
                                <div id="sub_info" class="col-12 col-lg-5  mb-3 mb-lg-0">
                                    <h5 class="mb-1">Your Plan</h5>
                                    <hr class="my-0"/>
                                    <table class="table table-borderless table-sm">
                                        <tbody style="white-space:nowrap">
                                            <tr t-if="template">
                                                <th class="text-end pb-0">Current Plan:</th>
                                                <td class="w-100 pb-0 text-wrap"><span t-field="template.name"/></td>
                                            </tr>
                                            <tr>
                                                <th class="text-end pb-0">Frequency:</th>
                                                <td class="w-100 pb-0 text-wrap"><span t-field="subscription.recurrence_id.name"/></td>
                                            </tr>
                                            <tr t-if="subscription.client_order_ref">
                                                <th class="text-end pb-0">Reference:</th>
                                                <td class="w-100 pb-0 text-wrap"><span t-field="subscription.client_order_ref"/></td>
                                            </tr>
                                            <tr t-if="subscription.end_date">
                                                <th class="text-end pb-0">Valid Until:</th>
                                                <td class="w-100 pb-0"><span t-field="subscription.end_date"/></td>
                                            </tr>
                                            <tr t-if="subscription.start_date">
                                                <th class="text-end pb-0">Start Date:</th>
                                                <td class="w-100 pb-0"><span t-field="subscription.start_date"/></td>
                                            </tr>
                                            <tr>
                                                <th class="text-end pb-0">Next Billing Date:</th>
                                                <td class="w-100 pb-0"><span t-field="subscription.next_invoice_date"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- ======  Customer Informations  ====== -->
                                <div id="customer_info" class="col-12 col-lg-5 offset-lg-1">
                                    <h5 class="mb-1">Your Details</h5>
                                    <hr class="my-0"/>
                                    <div t-field="subscription.partner_id" t-options='{ "widget": "contact", "fields": [ "name", "address", "phone", "email"]}'/>
                                    <a t-if="user.partner_id == subscription.partner_id"
                                        class="small" t-attf-href="/my/account?redirect={{subscription.get_portal_url()}}">
                                            (Wrong address?)
                                    </a>
                                </div>
                            </div>

                            <!-- ====== Plan details ====== -->
                            <t t-set="display_discount" t-value="True in [line.discount > 0 for line in subscription.order_line]"/>
                            <div class="row">
                                <div class="col-12 mt-4">
                                    <h3 class="mb-1">Plan Details</h3>
                                    <table class="table table-sm">
                                        <thead class="bg-100">
                                            <tr>
                                                <th>Product</th>
                                                <th class="text-end">Quantity</th>
                                                <th class="text-end d-none d-sm-table-cell">Unit Price</th>
                                                <th t-if="display_discount" class="text-end d-none d-sm-table-cell">
                                                    <span>Disc.%</span>
                                                </th>
                                                <th class="text-end d-none d-md-table-cell">Taxes</th>
                                                <th class="text-end">
                                                    <span>Tax excl.</span>
                                                </th>
                                                <th class="text-end" t-if="subscription.order_line.order_id.tax_calculation_rounding_method == 'round_per_line'">
                                                    <span>Tax incl.</span>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="current_subtotal" t-value="0"/>

                                            <t t-foreach="subscription.order_line" t-as="line">
                                                <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">

                                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                                    <t t-set="current_total" t-value="current_subtotal + line.price_total" t-if="subscription.order_line.order_id.tax_calculation_rounding_method == 'round_per_line'"/>


                                                    <t t-if="not line.display_type">
                                                        <td class="line-description"><span t-field="line.name"/></td>
                                                        <td class="text-end"><t t-esc="line.product_uom_qty"/> <span t-field="line.product_uom" data-oe-readonly="1"/></td>
                                                        <td class="text-end d-none d-sm-table-cell" t-if="not line.discount">
                                                            <span t-esc="line.price_unit" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/>
                                                        </td>
                                                        <td class="text-end d-none d-sm-table-cell" t-if="line.discount">
                                                            <div
                                                                t-if="line.discount &gt;= 0"
                                                                t-field="line.price_unit"
                                                                t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'
                                                                t-att-style="line.discount and 'text-decoration: line-through' or None"
                                                                t-att-class="(line.discount and 'text-danger' or '') + ' text-end'"
                                                            />
                                                            <div t-if="line.discount">
                                                                <t t-esc="(1-line.discount / 100.0) * line.price_unit" t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                                                            </div>
                                                        </td>
                                                        <td class="text-end d-none d-sm-table-cell" t-if="display_discount">
                                                            <strong t-if="line.discount &gt; 0" class="text-info">
                                                                <t t-esc="((line.discount % 1) and '%s' or '%d') % line.discount"/>%
                                                            </strong>
                                                        </td>
                                                        <td class="text-end d-none d-md-table-cell">
                                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                                        </td>
                                                        <td class="text-end">
                                                            <span class="oe_order_line_price_subtotal" t-field="line.price_subtotal"/>
                                                        </td>
                                                        <td class="text-end" t-if="subscription.order_line.order_id.tax_calculation_rounding_method == 'round_per_line' and not line.is_downpayment" >
                                                            <span class="oe_order_line_price_total" t-field="line.price_total"/>
                                                        </td>
                                                    </t>
                                                    <t t-if="line.display_type == 'line_section'">
                                                        <td colspan="99"><span t-field="line.name"/></td>
                                                        <t t-set="current_section" t-value="line"/>
                                                        <t t-set="current_subtotal" t-value="0"/>
                                                    </t>
                                                    <t t-if="line.display_type == 'line_note'">
                                                        <td colspan="99"><span t-field="line.name"/></td>
                                                    </t>
                                                </tr>

                                                <tr t-if="current_section and (line_last or subscription.order_line[line_index+1].display_type == 'line_section')"
                                                    class="is-subtotal text-end">
                                                    <td colspan="99">
                                                        <strong class="mr16">Subtotal</strong>
                                                        <span t-esc="current_subtotal"
                                                            t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'
                                                        />
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                    <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                                        <div class="col-sm-7 col-md-5 ms-auto">
                                            <table class="table table-sm">
                                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                                    <td><strong>Subtotal</strong></td>
                                                    <td class="text-end">
                                                        <span
                                                            data-id="amount_untaxed"
                                                            t-field="subscription.amount_untaxed"
                                                            t-options='{"widget": "monetary","display_currency": subscription.currency_id}'
                                                        />
                                                    </td>
                                                </tr>
                                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                                    <td>Taxes</td>
                                                    <td class="text-end">
                                                        <span
                                                            data-id="amount_tax"
                                                            t-field="subscription.amount_tax"
                                                            t-options='{"widget": "monetary","display_currency": subscription.currency_id}'
                                                        />
                                                    </td>
                                                </tr>
                                                <tr class="border-black">
                                                    <td><strong>Next Billing Amount:</strong></td>
                                                    <td class="text-end">
                                                        <span data-id="amount_total" t-field="subscription.amount_total" t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- / Plan details ====== -->

                            <!-- ======  Subscription closed ====== -->
                            <div t-if="display_payment_message" id="payment_message">
                                <div>
                                    <p id="wc_warning_closed" t-if="subscription.subscription_state == '6_churn'">Your subscription is closed.
                                        <t t-if="missing_periods == 1">If you wish to reopen it, you can pay your invoice for the current invoicing period.</t>
                                        <t t-if="missing_periods &gt; 1">If you wish to reopen it, the <t t-esc="missing_periods"/> missing payments (from <span t-field="subscription.next_invoice_date"/> to this day) will be automatically processed.</t>
                                    </p>
                                    <div t-if="company_mismatch">
                                        <t t-call="payment.company_mismatch_warning"/>
                                    </div>
                                    <div class="clearfix" t-elif="(payment_methods_sudo or tokens_sudo) and subscription.amount_total> 0">
                                        <h3 class="mb-1">Pay now to renew</h3>
                                        <div t-if="subscription.get_portal_last_transaction().state == 'pending'"
                                             class="alert alert-warning m-1 mt-3">
                                            <span>
                                                There is already a pending payment for this subscription.
                                            </span>
                                        </div>
                                        <t t-call="payment.form"/>
                                    </div>
                                </div>
                            </div>

                            <!-- ======  Terms and conditions ====== -->
                            <t t-if="not is_html_empty(subscription.note)">
                                <h4 class="mb-1">Terms and Conditions</h4>
                                <hr class="my-0"/>
                                <div t-field="subscription.note"/>
                            </t>
                        </div>
                    </div>

                    <!-- ======  Chatter ====== -->
                    <div t-if="is_follower" id="discussion">
                        <h3 class="mt-4">History</h3>
                        <t t-call="portal.message_thread">
                            <t t-set="chatter_mode" t-value="'json'"/>
                        </t>
                    </div>
                </div>

                <!-- ======  MODAL: Close Subscription Initialization ====== -->
                <div role="dialog" class="modal fade" id="wc-modal-close-init" t-if="display_close" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <header class="modal-header">
                                <h4 class="modal-title">
                                    Close Subscription <span t-field="subscription.display_name" class="text-primary"/>
                                </h4>
                            </header>
                            <form method="post" t-attf-action="/my/subscription/#{subscription.id}/close?access_token=#{subscription.access_token}">
                                <input class="d-none" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <main class="modal-body">
                                    <p class="fst-italic text-muted">You are about to permanently close a subscription that is valid until <span t-field="subscription.next_invoice_date"/>.</p>
                                    <h1>We are sorry to see you go.</h1>
                                    <p>Tell us, why are you leaving?</p>
                                    <t t-if="any(reason.visible_in_portal for reason in close_reasons)">
                                        <div class="mb-3">
                                            <select id="subscription-close-select" class="form-select" name="close_reason_id">
                                                <option value="">Choose a reason...</option>
                                                <t t-foreach="close_reasons" t-as="close_reason">
                                                    <t t-if="close_reason.visible_in_portal">
                                                        <option t-att-value="close_reason.id" t-att-data-retention="not (close_reason.empty_retention_message or close_reason.retention_button_text == False or close_reason.retention_button_link == False)" t-out="close_reason.name"/>
                                                    </t>
                                                </t>
                                            </select>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="mb-3">
                                            <textarea class="form-control" name="closing_text" style="width: 100%;" rows="4"></textarea>
                                        </div>
                                    </t>
                                </main>
                                <footer class="modal-footer">
                                    <a role="button" data-bs-toggle="modal" data-bs-target="#wc-modal-close-retain" href="#" class="btn btn-primary subscription-close-init-retain d-none">Submit</a>
                                    <button t-attf-class="btn btn-primary subscription-close-init-noretain subscription-close-finish {{ 'd-none' if any(reason.visible_in_portal for reason in close_reasons) else '' }}">Submit</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Discard, I want to stay</button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- ====== MODAL: Close Subscription Retention ====== -->
                <div role="dialog" class="modal fade" id="wc-modal-close-retain" t-if="display_close" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <header class="modal-header">
                                <h4 class="modal-title">
                                    Close Subscription <span t-field="subscription.display_name" class="text-primary"/>
                                </h4>
                            </header>
                            <main class="modal-body">
                                <p class="fst-italic text-muted">You are about to permanently close a subscription that is valid until <span t-field="subscription.next_invoice_date"/>.</p>
                                <t t-foreach="close_reasons" t-as="close_reason">
                                    <t t-if="close_reason.visible_in_portal and not (close_reason.empty_retention_message or close_reason.retention_button_text == False or close_reason.retention_button_link == False)">
                                        <div t-att-data-id="close_reason.id" class="subscription-close-message" t-field="close_reason.retention_message"></div>
                                    </t>
                                </t>
                            </main>
                            <footer class="modal-footer">
                                <t t-foreach="close_reasons" t-as="close_reason">
                                    <t t-if="close_reason.visible_in_portal and not (close_reason.empty_retention_message or close_reason.retention_button_text == False or close_reason.retention_button_link == False)">
                                        <a
                                            t-att-data-id="close_reason.id"
                                            role="button"
                                            t-att-href="close_reason.retention_button_link"
                                            class="btn btn-primary subscription-close-link"
                                            t-field="close_reason.retention_button_text"
                                        ></a>
                                    </t>
                                </t>
                                <button class="btn btn-secondary subscription-close-finish">No thanks, close my account</button>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Modify portal templates -->
    <template id="portal_my_home_menu_subscription" name="Portal layout : subscription menu entry" inherit_id="portal.portal_breadcrumbs" priority="10">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'subscription'" t-attf-class="breadcrumb-item #{'active' if not subscription else ''}">
                <a t-if="subscription" t-attf-href="/my/subscription?{{ keep_query() }}">Subscriptions</a>
                <t t-else="">Subscriptions</t>
            </li>
            <li t-if="subscription" class="breadcrumb-item active">
                <span t-field="subscription.type_name"/>
                <t t-esc="subscription.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_subscription" name="Show Subscriptions" customize_show="True" inherit_id="portal.portal_my_home" priority="90">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Subscriptions</t>
                <t t-set="url" t-value="'/my/subscription'"/>
                <t t-set="placeholder_count" t-value="'subscription_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_subscriptions" name="My Subscriptions">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Subscriptions</t>
            </t>
            <t t-if="not subscriptions">
                <p>You don't have any subscriptions yet.</p>
            </t>
            <t t-if="subscriptions" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="">Subscription</th>
                        <th class="text-center">Next Billing Date</th>
                        <th class="text-center">Recurrence</th>
                        <th class="text-end">Total</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <t t-foreach="subscriptions" t-as="subscription">
                    <tr>
                        <td>
                            <a t-att-href="subscription.get_portal_url()"><t t-esc="subscription.display_name"/></a>
                        </td>
                        <td class="text-center">
                            <t t-if="subscription.subscription_state == '3_progress' and subscription.next_invoice_date &lt; datetime.date.today()">
                                <span t-field="subscription.next_invoice_date" class="text-danger"/>
                            </t>
                            <t t-else="">
                                <span t-field="subscription.next_invoice_date"/>
                            </t>
                        </td>
                        <td class="text-center"><t t-esc="subscription.recurrence_id.sudo().name"/></td>
                        <td class="text-end"><span t-esc="subscription.amount_total" t-options="{'widget': 'monetary', 'display_currency': subscription.currency_id}"/></td>
                        <td class="text-center" id="subscription_state">
                            <t t-if="subscription.subscription_state in ['3_progress', '4_paused'] and subscription.next_invoice_date &lt; datetime.date.today()">
                                <span class="badge rounded-pill text-bg-danger"><i class="fa fa-fw fa-repeat"/> To Renew</span>
                            </t>
                            <t t-elif="subscription.subscription_state in ['3_progress', '4_paused']">
                                <span class="badge rounded-pill text-bg-success"><i class="fa fa-fw fa-check"/> In Progress</span>
                            </t>
                            <t t-elif="subscription.subscription_state == '6_churn'">
                                <span class="badge rounded-pill text-bg-dark"><i class="fa fa-fw fa-remove"/> Closed</span>
                            </t>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <!-- Complete the breadcrumbs of /my/payment_method. -->
    <template id="payment_portal_breadcrumb_inherit" inherit_id="payment.portal_breadcrumb">
        <xpath expr="//li[@id='o_payment_portal_home']" position="after">
            <t t-if="subscription">
                <li class="breadcrumb-item">
                    <a href="/my/subscription">Subscriptions</a>
                </li>
                <li class="breadcrumb-item">
                    <a t-att-href="subscription.get_portal_url()">
                        Subscription <t t-out="subscription.name"/>
                    </a>
                </li>
            </t>
        </xpath>
    </template>

    <!-- Sale order (quotations): display recurrency -->
    <template id="sale_order_portal_content_inherit" inherit_id="sale.sale_order_portal_content">
        <div id="informations" position="before">
            <div class="card-body">
                <div t-if="sale_order.pending_transaction" class="alert alert-warning" role="alert">
                    <p>This quote has a pending payment transaction. It will be confirmed once it is validated</p>
                </div>
            </div>
        </div>
        <xpath expr='//div[@id="informations"]' position="after">
            <div class="row" id="recurrency">
                    <div class="mb-3 col-6" t-if="sale_order.recurrence_id">
                        <strong>
                            Recurrency
                        </strong>
                        <span t-field="sale_order.recurrence_id"/>
                    </div>
            </div>
        </xpath>
    </template>

</odoo>
