    <record id="packing_list_line_tree_view" model="ir.ui.view">
        <field name="name">packing.list.line.tree.view</field>
        <field name="model">packing.list.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Remark"/>
                <field name="sales_order_line_id" string="Line" options="{'no_create':true}"
                       domain="[['order_id','in',orders]]"/>
                <field name="product_template_id"
                       attrs="{'readonly': [['sales_order_line_id','!=',False]]}"
                       options="{'no_create':true}"/>
                <field name="order_id_1" string="Order ID" optional="hide"/>
                <field name="partner_id" string="Partner ID" optional="hide"/>
                <field name="customer_order" string="PO#"/>
                <field name="carton_start" string="From"/>
                <field name="carton_end" string="To"/>
                <field name="design" string="BSK#"/>
                <field name="customer_code" string="REF"/>
                <field name="shipping_marks" string="Shipping Marks" optional="hide"/>
                <field name="quantity" class="btn-dark" string="Quantity" sum="Sum of Quantity"/>
                <field name="color" string="Color" optional="hide"/>
                <!--Quantities-->
                <field name="qty_per_carton" class="btn-dark" string="Qty/Ctn"/>
                <field name="carton_quantity" class="btn-dark" string="Ctn Qty" sum="Sum of Ctn Qty"/>
                <field name="order_qty" class="btn-dark" string="Order Qty" optional="hide"/>
                <field name="delivered_qty" class="btn-dark" string="Delivered Qty" attrs="{}" invisible="1"/>
                <field name="carton_type_id" optional="show"/>
                <!--Weights-->
                <field name="product_nw_kg" string="Product W." class="btn-info" optional="show"
                       digits="[12,3]"/>
                <field name="ctn_weight_kg" string="Ctn W." class="btn-info" optional="show" digits="[12,3]"/>
                <field name="net_weight" string="NW" class="btn-info" readonly="1" optional="show"
                       digits="[12,3]"/>
                <field name="gross_weight" string="GW" class="btn-info" readonly="1" optional="show"
                       digits="[12,3]"/>
                <field name="total_nw" class="btn-info" sum="Sum of Total NW" readonly="1" optional="show"
                       digits="[12,3]"/>
                <field name="total_gw" class="btn-info" sum="Sum of Total GW" readonly="1" optional="show"
                       digits="[12,3]"/>
                <field name="weight_unit" string="Unit" class="btn-info"
                       domain="[['category_id.name','ilike','Weight']]"
                       options="{'no_create':true}" readonly="1" optional="show"/>
                <!--Length-->
                <field name="width" class="btn-success" string="Width" optional="show" digits="[12,3]"/>
                <field name="length" class="btn-success" string="Length" optional="show" digits="[12,3]"/>
                <field name="height" class="btn-success" string="Height" optional="show" digits="[12,3]"/>
                <field name="distance_unit" string="Unit" class="btn-success"
                       domain="[['category_id.name','ilike','Length']]"
                       options="{'no_create':true}" optional="show" readonly="1"/>
                <field name="ctn_cbm" class="btn-success" string="CBM" optional="hide" readonly="1"
                       digits="[12,3]"/>
                <field name="total_cbm" class="btn-success" string="Total CBM" sum="Sum of Total CBM"
                       optional="show" readonly="1" digits="[12,3]"/>
                <field name="width_target" class="btn-danger" optional="hide" digits="[12,3]"/>
                <field name="length_target" class="btn-danger" optional="hide" digits="[12,3]"/>
                <field name="height_target" class="btn-danger" optional="hide" digits="[12,3]"/>
                <field name="target_distance_unit" class="btn-danger"
                       domain="[['category_id.name','ilike','Length']]" optional="hide"
                       readonly="1"/>
                <field name="orders" string="Orders" widget="many2many_tags" attrs="{}" invisible="1"/>
                <field name="packing_list_id" attrs="{}" invisible="1"/>
            </tree>
        </field>
    </record>

