                            <field name="width_target" class="btn-danger" optional="hide"/>
                            <field name="length_target" class="btn-danger" optional="hide"/>
                            <field name="height_target" class="btn-danger" optional="hide"/>
                            <field name="target_distance_unit" class="btn-danger" domain="[['category_id.name','ilike','Length']]" optional="hide"/>
                            <field name="ctn_target_cbm" class="btn-danger" optional="hide"/>
                            <!--Other-->
                            <field name="orders" string="Orders" widget="many2many_tags" attrs="{}" invisible="1"/>
                            <field name="packing_list_id" attrs="{}" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
