                            <field name="carton_quantity" class="btn-dark" string="Ctn Qty"/>
                            <field name="order_qty" class="btn-dark" string="Order Qty" optional="hide"/>
                            <field name="delivered_qty" class="btn-dark" string="Delivered Qty" attrs="{}" invisible="1"/>
