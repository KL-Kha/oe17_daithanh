                            <field name="net_weight" string="NW" class="btn-info"/>
                            <field name="gross_weight" string="GW" class="btn-info"/>
                            <field name="total_nw" class="btn-info"/>
                            <field name="total_gw" class="btn-info"/>
                            <field name="weight_unit" string="Unit" class="btn-info" domain="[['category_id.name','ilike','Weight']]" options="{'no_create':true}"/>
                            <!--Length-->
                            <field name="width" class="btn-success" string="Width"/>
                            <field name="length" class="btn-success" string="Length"/>
                            <field name="height" class="btn-success" string="Height"/>
                            <field name="distance_unit" string="Unit" class="btn-success" domain="[['category_id.name','ilike','Length']]" options="{'no_create':true}"/>
                            <field name="ctn_cbm" class="btn-success"/>
                            <hr/>
                            <!--Weight imperial-->
                            <field name="target_net_weight" class="btn-warning" optional="hide"/>
                            <field name="target_gross_weight" class="btn-warning" optional="hide"/>
                            <field name="total_nw_target" class="btn-warning" optional="hide"/>
                            <field name="total_gw_target" class="btn-warning" optional="hide"/>
                            <field name="weight_target_unit" class="btn-warning" domain="[['category_id.name','ilike','Weight']]" optional="hide"/>
