<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shipping_destination_tree_view" model="ir.ui.view">
        <field name="name">shipping.destination.form.view</field>
        <field name="model">shipping.destination</field>
        <field name="arch" type="xml">
            <tree string="Shipping Destination">
                <field name="sequence"/>
                <field name="name"/>
                <field name="create_date"/>
                <field name="code"/>
                <field name="active" optional="hide"/>
                <field name="id" optional="hide"/>
                <field name="write_uid" optional="hide"/>
                <field name="write_date" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="shipping_destination_form_view" model="ir.ui.view">
        <field name="name">shipping.destination.form.view</field>
        <field name="model">shipping.destination</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                    <h1>
                        <field name="name"/>
                    </h1>
                    </div>
                    <group>
                    <group> 
                        <field name="code"/>
                    </group>
                    <group> 
                    </group>
                    </group>
                    <notebook>
                    <page string="Notes">
                        <group>
                        </group>
                        <field name="notes"/>
                    </page>
                    <page string="Description">
                        <group>
                        </group>
                        <field name="description"/>
                    </page>
                    <page string="Others">
                        <group>
                        <group> 
                            <field name="active"/>
                            <field name="create_uid"/>
                            <field name="write_uid"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="create_date"/>
                            <field name="write_date"/>
                        </group>
                        </group>
                    </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="shipping_destination_search_view" model="ir.ui.view">
        <field name="name">shipping.destination.search.view</field>
        <field name="model">shipping.destination</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator />
                    <filter string="Archived" name="archived_packing_list" domain="[['active', '=', False]]" />
                <separator />
            </search>
        </field>
    </record>

    <record id="shipping_destination_action" model="ir.actions.act_window">
        <field name="name">Shipping Destination</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shipping.destination</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Shipping Destination
            </p>
        </field>
    </record>

    <menuitem id="shipping_destination_submenu_action" parent="sale.sale_order_menu" name="Shipping Destination" action="shipping_destination_action" sequence="35" />

</odoo>
