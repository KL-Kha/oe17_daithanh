<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="packing_list_stage_tree_view" model="ir.ui.view">
        <field name="name">packing.list.stage.form.view</field>
        <field name="model">packing.list.stage</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="sequence" widget="handle"/>
                <field name="id"/>
                <field name="name"/>
                <field name="is_delivery"/>
                <field name="is_invoice"/>
                <field name="is_closed"/>
            </tree>
        </field>
    </record>

    <record id="packing_list_stage_form_view" model="ir.ui.view">
        <field name="name">packing.list.stage.form.view</field>
        <field name="model">packing.list.stage</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet string="Packing List Stages">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Name..."/>
                        </h1>
                    </div>
                    
                    <group name="studio_group_32ff29">
                    <field name="is_closed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="packing_list_stage_search_view" model="ir.ui.view">
        <field name="name">packing.list.stage.search.view</field>
        <field name="model">packing.list.stage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="packing_list_stage_action" model="ir.actions.act_window">
        <field name="name">Packing List Stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">packing.list.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Packing List Stage
            </p>
        </field>
    </record>

    <menuitem id="packing_list_submenu" parent="sale.menu_sale_config" name="Packing List" sequence="70" >
        <menuitem id="packing_list_stage_menu" name="Packing List Stage" action="packing_list_stage_action" sequence="30"/>
    </menuitem>

</odoo>
