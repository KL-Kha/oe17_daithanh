<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="l10n_mx_edi_inh_res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.l10n_mx_edi</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="MX EDI" name="addenda" invisible="'MX' not in fiscal_country_codes">
                        <group>
                            <field name="country_code" invisible="1"/>
                            <field name="l10n_mx_edi_addenda"/>
                            <field name="l10n_mx_edi_addenda_doc" invisible="not l10n_mx_edi_addenda"/>
                            <field name="l10n_mx_edi_fiscal_regime"/>
                            <field name="l10n_mx_edi_no_tax_breakdown"/>
                            <field name="l10n_mx_edi_usage"/>
                            <field name="l10n_mx_edi_payment_method_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
